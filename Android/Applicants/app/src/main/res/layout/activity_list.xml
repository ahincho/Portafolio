<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_demote"
    android:orientation="vertical"
    tools:context=".ListActivity">
    <EditText
        android:id="@+id/etApplicantFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:hint="@string/search_applicants_by_document"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:ignore="VisualLintTextFieldSize" />
    <Button
        android:id="@+id/btnSuperHeroAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/login_button_demote"
        android:contentDescription="@string/add_applicant"
        android:text="@string/add_applicant"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_applicant_add"
        app:iconGravity="textStart"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvApplicants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>