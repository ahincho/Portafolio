<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivApplicantPhoto"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/applicant"
            android:contentDescription="@string/applicant_photo"/>
        <TextView
            android:id="@+id/tvApplicantFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/ivApplicantPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvApplicantBirthday"
            tools:text="Applicant Full Name"/>
        <TextView
            android:id="@+id/tvApplicantBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivApplicantPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvApplicantFullName"
            app:layout_constraintBottom_toTopOf="@id/tvApplicantSchool"
            tools:text="Applicant Birthday"/>
        <TextView
            android:id="@+id/tvApplicantSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivApplicantPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvApplicantBirthday"
            app:layout_constraintBottom_toTopOf="@+id/tvApplicantCareer"
            tools:text="Applicant School"/>
        <TextView
            android:id="@+id/tvApplicantCareer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/ivApplicantPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvApplicantSchool"
            app:layout_constraintBottom_toTopOf="@+id/btnApplicantDelete"
            tools:text="Applicant Career"/>
        <Button
            android:id="@+id/btnApplicantDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/button_demote"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_delete_forever"
            app:layout_constraintBottom_toTopOf="@id/tvApplicantDocument"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivApplicantPhoto"
            app:layout_constraintTop_toBottomOf="@id/tvApplicantCareer"
            tools:ignore="TextContrastCheck" />
        <TextView
            android:id="@+id/tvApplicantDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Applicant Document"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>