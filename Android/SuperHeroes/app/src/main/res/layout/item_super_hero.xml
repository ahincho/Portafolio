<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/ivSuperHeroImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@color/black"
        android:contentDescription="@string/super_hero_image"/>
    <TextView
        android:id="@+id/tvSuperHeroAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivSuperHeroImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Super Hero Alias"/>
    <TextView
        android:id="@+id/tvSuperHeroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvSuperHeroAlias"
        app:layout_constraintStart_toEndOf="@id/ivSuperHeroImage"
        tools:text="Super Hero Name"/>
    <TextView
        android:id="@+id/tvSuperHeroPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSuperHeroName"
        app:layout_constraintStart_toEndOf="@id/ivSuperHeroImage"
        tools:text="Super Hero Publisher"/>
</androidx.constraintlayout.widget.ConstraintLayout>